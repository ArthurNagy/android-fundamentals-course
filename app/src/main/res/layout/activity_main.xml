<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/first_keyline">

    <TextView
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textAllCaps="true"
        android:textAppearance="?textAppearanceHeadline6"
        android:textColor="@color/orange" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_label"
        android:layout_marginTop="@dimen/content_padding"
        android:autofillHints="@string/email"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="@dimen/content_padding"
        android:autofillHints="@string/email"
        android:hint="@string/phone"
        android:inputType="phone" />

    <CheckBox
        android:id="@+id/t_and_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="@dimen/content_padding"
        android:text="@string/terms_and_conditions" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_and_c"
        android:layout_marginTop="@dimen/content_padding"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit"
        android:layout_marginTop="@dimen/first_keyline"
        android:gravity="center"
        tools:text="Email: email@email.com\nPhone: 97249141,\nT&amp;C: false" />

</RelativeLayout>